<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="2dp"
    android:layout_margin="8dp"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Top Row: Customer Name and Phone -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/customerNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Venkata Ramana"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/customerPhoneTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9908947050"
                android:textSize="14sp"
                android:textColor="#388E3C"
                android:drawableLeft="@android:drawable/stat_sys_phone_call"
                android:drawablePadding="4dp"/>
        </LinearLayout>

        <!-- Middle Row: Order ID and Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/orderIdTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Order ID : #4340"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹5,500"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#388E3C" />
        </LinearLayout>

        <!-- Bottom Row: Status and Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed"
                android:textStyle="bold"
                android:textColor="#212121"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fri, 25 Jan"
                android:textColor="#9E9E9E"
                android:textSize="14sp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
