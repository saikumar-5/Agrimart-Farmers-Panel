<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AgrimartGreen"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/tree_text_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- AGR Text (Initially Hidden) -->
        <TextView
            android:id="@+id/agr_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agr"
            android:fontFamily="@font/orange_lemonade"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:visibility="invisible"/>  <!-- Space between AGR and Tree -->

        <!-- Tree Image -->
        <ImageView
            android:id="@+id/tree"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/tree__1__1"/>

        <!-- Mart Text (Initially Hidden) -->
        <TextView
            android:id="@+id/mart_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mart"
            android:fontFamily="@font/orange_lemonade"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:visibility="invisible"/>
    </LinearLayout>
</RelativeLayout>