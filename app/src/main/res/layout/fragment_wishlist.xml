<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top Bar with Back Button and Title -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@android:color/white">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/arrow_back_24dp_000000"
            android:contentDescription="Back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:tint="@android:color/black" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sales Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- Rest of your content (Sales Details) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Today's Sales and Total Sales Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                android:layout_marginBottom="16dp">

                <!-- Today's Sales Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:elevation="4dp"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="left">

                    <!-- TITLE + IMAGE HORIZONTAL LAYOUT -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:text="Today's Sales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_marginEnd="8dp"/>

                        <ImageView
                            android:id="@+id/todays_sales_icon"
                            android:layout_marginStart="25dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/trending_up_24dp_000000"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <TextView
                        android:text="â‚¹10,200"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_marginTop="8dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:text="+25%"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@android:color/holo_green_dark" />

                        <TextView
                            android:text=" since yesterday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Total Sales Card -->

                <!-- Total Sales Card (Fixed to match Today's Sales) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:elevation="4dp"
                    android:padding="16dp"
                    android:layout_marginStart="8dp"
                    android:gravity="left">

                    <!-- TITLE + IMAGE HORIZONTAL LAYOUT -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp"
                        android:paddingEnd="10dp">

                        <TextView
                            android:text="Total Sales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_marginEnd="8dp"/>

                        <ImageView
                            android:id="@+id/total_sales_icon"
                            android:layout_marginStart="25dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/trending_up_24dp_000000"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <TextView
                        android:text="â‚¹55,700"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_marginTop="8dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:text="+55%"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@android:color/holo_green_dark" />

                        <TextView
                            android:text=" from start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sales Analytics"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_marginStart="17dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/insights_24dp_000000" />

            </LinearLayout>




            <!-- Weekly/Monthly/Yearly Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:weightSum="3">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Weekly"
                    app:cornerRadius="200dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="2dp"
                    app:backgroundTint="#F5F5F9"
                    android:elevation="4dp"
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Monthly"
                    app:cornerRadius="50dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="0dp"
                    app:backgroundTint="#F5F5F5"
                    android:elevation="4dp"
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Yearly"
                    app:cornerRadius="50dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="0dp"
                    app:backgroundTint="#F5F5F5"
                    android:elevation="4dp"
                    android:textColor="@android:color/black" />
            </LinearLayout>


            <!-- Weekly Sales Trend Graph Placeholder -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/your_chart_placeholder"
                android:scaleType="fitCenter"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="16dp"/>

            <!-- Most Sold Product Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:padding="16dp">

                <TextView
                    android:text="Most Sold Product ðŸ†"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/your_tomato_image"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:text="Tomatoes"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:text="57% of Total Sales"
                    android:textSize="14sp"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:text="125 Kg Sold"
                    android:textSize="14sp"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:text="â‚¹38,500 Earned"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
